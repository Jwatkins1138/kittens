<div class='columns px-5 pt-5'>    
  <div class='column is-half is-offset-one-quarter'>
    <%= form_with model: @kitten do |f|%>
    <div class='field'>
      <div class='control'>
        <label class='label'>name</label>
        <%= f.text_field :name, class: 'input' %>
        <label class='label'>age</label>
        <%= f.number_field :age, in: 0..99, step: 1, class: 'input' %>
        <label class='label'>cuteness</label>
        <%= f.number_field :cuteness, in: 1..7, step: 1, class: 'input' %>
        <label class='label'>softness</label>
        <%= f.number_field :softness, in: 1..7, step: 1, class: 'input' %>
      </div>
      <div class='control'>  
        <%= f.submit 'submit', class: 'button' %>
      </div>
    </div>
    <% end %>
  </div>
</div>    